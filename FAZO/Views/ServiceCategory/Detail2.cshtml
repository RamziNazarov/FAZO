@model ServiceCategoryDetailViewModel


<!-- Packages Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Services</h6>
        </div>
        <div class="row">
            @foreach (var service in Model.Services)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="package-item bg-white mb-2">
                        <img style="width: 100%; height: auto;" src="~/@service.CoverUrl" alt="">
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="m-0">@service.Name</h5>
                            </div>
                            <p class="text-decoration-none">@service.Duration</p>
                            <p class="text-decoration-none">@service.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Packages End -->
